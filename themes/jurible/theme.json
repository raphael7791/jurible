        },
        {
          "slug": "text-dark",
          "name": "Text Dark",
          "color": "#1A1A1A"
        },
        {
          "slug": "text-gray",
          "name": "Text Gray",
          "color": "#4A4A4A"
        },
        {
          "slug": "text-muted",
          "name": "Text Muted",
          "color": "#9CA3AF"
        },
        {
          "slug": "info",
          "name": "Info",
          "color": "#3B82F6"
        },
        {
          "slug": "info-bg",
          "name": "Info Background",
          "color": "#EFF6FF"
        },
        {
          "slug": "info-text",
          "name": "Info Text",
          "color": "#1E40AF"
        },
        {
          "slug": "success",
          "name": "Success",
          "color": "#10B981"
        },
        {
          "slug": "success-bg",
          "name": "Success Background",
